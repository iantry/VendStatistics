<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="TextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">4sp</item>
        <item name="android:color">@color/black_color</item>
    </style>


    <style name="ActionBarTitle" parent="android:Widget.TextView">

        <!-- Customizes the color of the action bar title-->
        <item name="android:textColor">@color/white_color</item>

        <item name="android:textSize">16sp</item>

    </style>

</resources>
