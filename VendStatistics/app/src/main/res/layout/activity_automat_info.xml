<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ivanov.andrey.vendstatistics.activitys.AutomatInfo">

    <include layout="@layout/toolbar"
        android:id="@+id/automat_info_toolbar"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewAddData"
        android:layout_below="@+id/automat_info_toolbar"
        android:layout_above="@+id/buttonSaveData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/buttonSaveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:focusable="true"
        android:text="@string/save"/>


</RelativeLayout>
